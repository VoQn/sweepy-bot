{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "../../node_modules/@types",
      "./types"
    ]
  },
  "include": ["./src/*"],
  "exclude": ["node_modules"]
}
